<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">时间范围选择插件</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form role="form">
                <div class="box-body">
                    <div class="form-group">
                        <label for="exampleInputEmail1">全工具富文本编辑器</label>
                        {{bu-editor value=title valueType="contentTxt" options=view.optionsR1}}
                    </div>
                    <div class="form-group">
                        <label for="exampleInputEmail1">默认富文本编辑器</label>
                        {{bu-editor value=title valueType="contentTxt" options=view.optionsR2}}
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>