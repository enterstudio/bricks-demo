<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">bu-modal插件</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form role="form">
                <div class="box-body">
                    <div class="box box-warning">
                        <div class="box-header">
                            <h3 class="box-title">基本用法</h3>
                        </div>
                        <div class="box-body">
                            <form role="form">
                                <div class="form-group">

                                    {{bu-button title="Show Modal" clicked="show"}}
                                    {{#bu-modal name="myModal" fade=true footerButtonsBinding="myModalButtons" title="My Modal"}}
                                        <p>Modal content!</p>
                                    {{/bu-modal}}
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="box box-danger">
                        <div class="box-header">
                            <h3 class="box-title">确认型modal</h3>
                        </div>
                        <div class="box-body">
                            <form role="form">
                                <div class="form-group">
                                    {{bu-button title="create" clicked="confirm"}}
                                </div>
                            </form>
                        </div>
                    </div>



                    <div class="box box-warning">
                        <div class="box-header">
                            <h3 class="box-title">通过编程方式调用modal</h3>
                        </div>
                        <div class="box-body">
                            <form role="form">
                                <div class="form-group">

                                    {{bu-button title="Create Modal" clicked="createModalProgramatically"}}
                                </div>
                            </form>
                        </div>
                    </div>



                </div>
            </form>
        </div>
    </div>
</div>