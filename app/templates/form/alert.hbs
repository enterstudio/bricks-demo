<div class="row">
    <div class="col-md-6">
        <div class="box box-primary">
            <div class="box-header">
                <h3 class="box-title">bu-alert插件</h3>
            </div><!-- /.box-header -->
            <!-- form start -->
            <form role="form">
                <div class="box-body">
                    <div class="box box-warning">
                        <div class="box-header">
                            <h3 class="box-title">primary类型的alert组件</h3>
                        </div>
                        <div class="box-body">
                            <form role="form">
                                <div class="form-group">

                                    {{bu-alert message="A warning alert with simple message." type="primary" close="close"}}
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="box box-danger">
                        <div class="box-header">
                            <h3 class="box-title">success类型的alert组件(不能关闭)</h3>
                        </div>
                        <div class="box-body">
                            <form role="form">
                                <div class="form-group">

                                    {{bu-alert message="A warning alert with simple message." type="success" dismiss=false}}
                                </div>
                            </form>
                        </div>
                    </div>
                    <div class="box box-warning">
                    <div class="box-header">
                        <h3 class="box-title">info类型的alert组件</h3>
                    </div>
                    <div class="box-body">
                        <form role="form">
                            <div class="form-group">

                                {{bu-alert message="A warning alert with simple message." type="info" closed="closed"}}
                            </div>
                        </form>
                    </div>
                </div>
                    <div class="box box-danger">
                    <div class="box-header">
                        <h3 class="box-title">warning类型的alert组件(6s后关闭，关闭时会显示淡出动画)</h3>
                    </div>
                    <div class="box-body">
                        <form role="form">
                            <div class="form-group">

                                {{bu-alert message="A warning alert with simple message." type="warning" fade=true dismissAfter=6}}
                            </div>
                        </form>
                    </div>
                </div><div class="box box-warning">
                    <div class="box-header">
                        <h3 class="box-title">danger类型的alert组件</h3>
                    </div>
                    <div class="box-body">
                        <form role="form">
                            <div class="form-group">

                                {{bu-alert message="A warning alert with simple message." type="danger" }}
                            </div>
                        </form>
                    </div>
                </div>



                </div>
            </form>
        </div>
    </div>
</div>